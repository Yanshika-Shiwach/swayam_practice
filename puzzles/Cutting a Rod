class Solution {
public:
    int cutRod(vector<int>& price) {
        int n = price.size();
        vector<int> dp(n + 1, 0);
        for (int len = 1; len <= n; len++) {
            int best = 0;
            for (int cut = 1; cut <= len; cut++) {
                best = max(best, price[cut - 1] + dp[len - cut]);
            }
            dp[len] = best;
        }
        return dp[n];
    }
};
