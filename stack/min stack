#include <stack>
#include <algorithm>

class MinStack {
    std::stack<int> st;
    std::stack<int> minSt;

public:
    MinStack() { }

    void push(int x) {
        st.push(x);
        if (minSt.empty() || x <= minSt.top()) {
            minSt.push(x);
        } else {
            minSt.push(minSt.top());
        }
    }

    void pop() {
        st.pop();
        minSt.pop();
    }

    int top() {
        return st.top();
    }

    int getMin() {
        return minSt.top();
    }
};
