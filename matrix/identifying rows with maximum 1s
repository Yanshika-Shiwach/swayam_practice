#include <vector>
using namespace std;

class Solution {
public:
    int rowWithMaxOnes(vector<vector<int>>& matrix) {
        int maxRowIndex = -1;
        int maxOnes = 0;
        for (int i = 0; i < matrix.size(); i++) {
            int low = 0, high = matrix[i].size() - 1;
            int firstOneIndex = matrix[i].size();
            while (low <= high) {
                int mid = low + (high - low) / 2;
                if (matrix[i][mid] == 1) {
                    firstOneIndex = mid;
                    high = mid - 1;
                } else {
                    low = mid + 1;
                }
            }
            int countOnes = matrix[i].size() - firstOneIndex;
            if (countOnes > maxOnes) {
                maxOnes = countOnes;
                maxRowIndex = i;
            }
        }
        return maxRowIndex;
    }
};
