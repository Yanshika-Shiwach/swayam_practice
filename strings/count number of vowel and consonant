#include <string>
using namespace std;

class Solution {
public:
    pair<int, int> countVowelsConsonants(const string& s) {
        int vowels = 0, consonants = 0;
        for(char c : s) {
            if (isalpha(c)) {
                char lower = tolower(c);
                if (lower == 'a' || lower == 'e' || lower == 'i' || lower == 'o' || lower == 'u') {
                    vowels++;
                } else {
                    consonants++;
                }
            }
        }
        return {vowels, consonants};
    }
};
