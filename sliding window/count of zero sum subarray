class Solution{
public:
    int findSubarray(vector<int>& arr, int n) {
        unordered_map<int, int> mp;
        int sum = 0, count = 0;
        mp[0] = 1;
        for (int i = 0; i < n; ++i) {
            sum += arr[i];
            if (mp.count(sum)) count += mp[sum];
            mp[sum]++;
        }
        return count;
    }
};
