class Solution{
public:
    int maxLen(vector<int>& arr, int n) {
        unordered_map<int, int> mp;
        int sum = 0, maxLen = 0;
        for (int i = 0; i < n; ++i) {
            sum += arr[i];
            if (sum == 0) maxLen = i + 1;
            if (mp.count(sum))
                maxLen = max(maxLen, i - mp[sum]);
            else
                mp[sum] = i;
        }
        return maxLen;
    }
};
